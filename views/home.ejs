  <script>
  document.addEventListener("DOMContentLoaded", function () {
    const scrollContainer = document.querySelector(".scroll-container");
    let direction = 1; // 1 = right, -1 = left
    const scrollSpeed = 5; // pixels per tick
    const scrollInterval = 20; // ms between scroll steps

    setInterval(() => {
      if (!scrollContainer) return;

      scrollContainer.scrollLeft += scrollSpeed * direction;

      // Reverse direction at edges
      if (
        scrollContainer.scrollLeft + scrollContainer.offsetWidth >= scrollContainer.scrollWidth
      ) {
        direction = -1;
      }

      if (scrollContainer.scrollLeft <= 0) {
        direction = 1;
      }
    }, scrollInterval);
  });
</script>


