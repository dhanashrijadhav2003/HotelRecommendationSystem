<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>City Dashboard</title>
  
  <link rel="stylesheet" href="styleCityDash.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
</head>
<body>

  <div class="container">
    <nav class="navbar">

      <ul class="nav">
        <li><a class="nav-link active" onclick="loadPage('/addCity', this)">âž•Add City</a></li>
        <li><a class="nav-link" onclick="loadPage('/viewCity', this)">View City</a></li>
      </ul>
    </nav>
  </div>

  <!-- Iframe section wrapped -->
    <div class="iframe-wrapper">
      <iframe id="contentFrame" src="" scrolling=""></iframe>
    </div>
  </nav>

  <!-- Main Content 
  <div class="content">
    <h1>Welcome to the City Admin Dashboard</h1>
    <p>Use the navbar to add new Cities or view existing entries.</p>
  </div>-->

  <script>
    function loadPage(page, clickedLink) {
      document.getElementById('contentFrame').src = page;

      // Handle active class
      document.querySelectorAll('.nav-link').forEach(link => {
        link.classList.remove('active');
      });
      clickedLink.classList.add('active');
    }
  </script>
  </div>
</body>
</html>
