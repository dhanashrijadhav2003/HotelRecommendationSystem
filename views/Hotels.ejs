<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Hotel Admin Template</title>

  
  <link rel="stylesheet" href="styleHotelDash.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>
<body>

  <div class="container">
    <nav class="navbar">

      <ul class="nav">
        <li><a class="nav-link active" onclick="loadPage('/addHotel', this)"><i class="fa-solid fa-plus"></i>Add Hotel</a></li>
        <li><a class="nav-link" onclick="loadPage('/viewHotels', this)"><i class="fa-solid fa-list"></i>View Hotel</a></li>
      </ul>
    </nav>
  </div>

 <!-- Iframe section wrapped -->
    <div class="iframe-wrapper">
      <iframe id="contentFrame" src="" scrolling=""></iframe>
    </div>
  </nav>

  <!-- Main Content -
  <div class="content">
    <h1>Welcome to the Hotel Admin Dashboard</h1>
    <p>Use the navbar to add new hotels or view existing entries.</p>
  </div>-->

  <script>
    function loadPage(page, clickedLink) {
      document.getElementById('contentFrame').src = page;

      // Handle active class
      document.querySelectorAll('.nav-link').forEach(link => {
        link.classList.remove('active');
      });
      clickedLink.classList.add('active');
    }
  </script>
</body>
</html>
