<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Hotel Registration Form</title>
  <link rel="stylesheet" href="addNewHotel.css" />

  <style>
    
   body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f4f6f8;
      margin: 0;
      padding: 5px;
    }

    .box {
      background-color: #fff;
      max-width: 900px;
      margin: auto;
      padding: 5px;
      border-radius: 16px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.7);
      margin-top:50px;
    }

    h2 {
      text-align: center;
      color: #4e54c8;
      margin-bottom: 20px;
    }

    .form-row {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }

    .form-column {
      flex: 1;
      min-width: 280px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    input[type="text"],
    input[type="email"],
    input[type="file"],
    select {
      width: 100%;
      padding: 5px;
      border-radius: 10px;
      border: 2px solid #ccc;
      font-size: 15px;
      box-sizing: border-box;
      transition: border-color 0.3s;
    }

    input[type="text"]:focus,
    input[type="email"]:focus,
    select:focus {
      border-color: #4e54c8;
      outline: none;
    }

    input[type="submit"] {
      background-color: #4e54c8;
      color: white;
      font-size: 16px;
      padding: 7px 15px;
      border: none;
      border-radius: 10px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    input[type="submit"]:hover {
      background-color: #5f62f5;
    }

    #amenities {
      width: 100%;
      height: 100px;
      background-color: #f9f9f9;
      border-radius: 10px;
      padding: 5px;
      font-size: 14px;
      border: 2px solid #ccc;
      color: #333;
    }

    #amenities:focus {
      border-color: #4e54c8;
      background-color: #fff;
    }

    #amenities option:checked {
      background-color: #4e54c8;
      color: white;
    }

    label {
      color: black;
      font-weight: bold;
      display: block;
      margin-bottom: 5px;
    }

    small {
      color: gray;
    }

    #previewImage {
      display: none;
      max-width: 100%;
      margin-top: 10px;
      border-radius: 8px;
      border: 1px solid #ddd;
      padding: 4px;
    }

    /* फक्त रेस्पॉन्सिव्हिटी सुधारणा */
    @media screen and (max-width: 768px) {
      .form-row {
        flex-direction: column; /* कॉलम वरुन ओळीत */
      }

      .form-column {
        width: 100%; /* पूर्ण रुंदी */
      }

      .box {
        max-width: 100%; /* पूर्ण विंडो रुंदी */
        padding: 15px;
      }

      input[type="submit"] {
        width: 100%;     /* Submit बटन पूर्ण रुंदी */
        padding: 12px 0;
        font-size: 18px;
        box-sizing: border-box;
      }
    }

    @media screen and (max-width: 480px) {
      input[type="submit"] {
        font-size: 16px;
        padding: 10px 0;
      }
    }

    .submit-container {
      text-align: center;
      margin-top: 20px;
    }
  </style>
</head>

<body>
  <div class="box">
    <form name="frm" action="/addHotel" method="POST" enctype="multipart/form-data">
      <h2>Add Hotel</h2>

      <div class="form-row">
        <!-- Left Column -->
        <div class="form-column">
          <div class="form-group">
            <input type="text" name="hotel_name" id="hotelname" placeholder="Enter Hotel Name" required />
          </div>

          <div class="form-group">
            <input type="text" name="hotel_address" id="hoteladd" placeholder="Enter Hotel Address" required />
          </div>

          <div class="form-group">
            <input type="email" name="hotel_email" id="hotelemail" placeholder="Enter Email" required />
          </div>

          <div class="form-group">
            <select name="city_id" required>
              <option value="">-- Select City --</option>
              <% citymaster.forEach(city => { %>
                <option value="<%= city.city_id %>"><%= city.city_name %></option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <select name="area_id" required>
              <option value="">-- Select Area --</option>
              <% areamaster.forEach(area => { %>
                <option value="<%= area.area_id %>"><%= area.area_name %></option>
              <% }) %>
            </select>
          </div>
        </div>

        <!-- Right Column -->
        <div class="form-column">
          <div class="form-group">
            <label for="imageUpload">Choose Hotel Image</label>
            <input type="file" name="filename" id="imageUpload" accept="image/*" required />
            <img id="previewImage" src="#" alt="Preview" />
          </div>

          <div class="form-group">
            <label for="amenities">Select Amenities</label>
            <select id="amenities" name="amenity_ids[]" multiple required>
              <% amenities.forEach(amenity => { %>
                <option value="<%= amenity.amenity_id %>"><%= amenity.amenity_name %></option>
              <% }) %>
            </select>
            <small>(Hold Ctrl or Command to select multiple)</small>
          </div>
        </div>
      </div>

      <div class="form-group submit-container">
        <input type="submit" value="➕ Add Hotel" />

      </div>


      <span><%= msg %></span>
    </form>
  </div>

  <script>
    document.getElementById("imageUpload").addEventListener("change", function(event) {
      const file = event.target.files[0];
      const preview = document.getElementById("previewImage");
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          preview.src = e.target.result;
          preview.style.display = "block";
        };
        reader.readAsDataURL(file);
      } else {
        preview.src = "#";
        preview.style.display = "none";
      }
    });
  </script>
</body>
</html>
